{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup",
      "type": "process",
      "command": "just",
      "args": [
        "setup"
      ],
      "options": {
        "cwd": "${workspaceRoot}",
        "statusbar": {
          "label": "🛠️Setup"
        }
      },
      "group": "build"
    },
