{
  "configurations": [
    {
      "name": "üêû PyOCD",
      "showDevDebugOutput": "both",
      "cwd": "${workspaceRoot}",
      "executable": "./build/Debug/${workspaceRootFolderName}.elf",
      "request": "launch",
      "type": "cortex-debug",
      "toolchainPrefix": "arm-none-eabi",
      "interface": "swd",
      "runToEntryPoint": "main",
      "servertype": "pyocd",
      "preLaunchTask": "Flash",
      //   "device": "wchlink",
      //   "targetId": "cortex_m"
      "osx": {
        "armToolchainPath": "/opt/homebrew/bin"
      },
      "windows": {
        "armToolchainPath": "C:/Program Files (x86)/Arm GNU Toolchain arm-none-eabi/14.2 rel1/bin"
      },
      "linux": {
        "armToolchainPath": "/usr/bin"
      }
    },
